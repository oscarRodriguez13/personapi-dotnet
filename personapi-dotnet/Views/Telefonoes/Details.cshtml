@model personapi_dotnet.Models.Entities.Telefono

@{
    ViewData["Title"] = "Detalles del Teléfono";
}

<div class="card shadow-sm fade-in">
    <div class="card-header bg-gradient d-flex align-items-center">
        <div class="icon-circle me-3">
            <i class="fas fa-info-circle"></i>
        </div>
        <div>
            <h4 class="mb-0 fw-bold">Detalles del Teléfono</h4>
            <p class="text-muted small mb-0">Información registrada del número de teléfono</p>
        </div>
    </div>

    <div class="card-body">
        <dl class="row mb-4">
            <dt class="col-sm-3">
                <i class="fas fa-broadcast-tower me-2 text-primary"></i>Operador
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Oper)
            </dd>

            <dt class="col-sm-3">
                <i class="fas fa-user me-2 text-primary"></i>Cédula del Dueño
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DuenioNavigation.Cc)
            </dd>
        </dl>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver al listado
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Num" class="btn btn-warning text-white">
                <i class="fas fa-edit me-2"></i>Editar teléfono
            </a>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
    }

    .card {
        animation: cardEnter 0.5s ease-out;
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
